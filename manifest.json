{
  "app-id": "org.example.glosung",
  "runtime": "org.gnome.Platform/x86_64/3.38",
  "runtime-version": "3.38",
  "sdk": "org.gnome.Sdk",
  "command": "./scripts/build.sh",
  "finish-args": [
     "--share=network"
  ],
  "modules": [
     {
       "name": "glosung",
       "buildsystem": "scons",
       "config-opts": [
         "--prefix=/app"
       ],
       "sources": [
         {
           "type": "git",
           "url": "https://github.com/glosung/glosungCI-CD",
           "branch": "main"
         }
       ],
       "build-dependencies": [
         {
           "type": "system",
           "name": "autoconf"
         }
       ]
     }
  ]
 }